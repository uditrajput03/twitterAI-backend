generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  name     String?
  verified Boolean   @default(false)
  profile  Profile[]
}

model Profile {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  user        User   @relation(fields: [userId], references: [id])
  userId      Int
}
